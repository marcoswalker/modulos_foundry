<div class="form-group">
	<label>{{localize name}}</label>
	{{#if (eq type "Button")}}
		<button name="{{id}}" type="button" style="flex: 2;">{{localize name}}</button>
	{{/if}}
	{{#if (eq type "Boolean")}}
		<input name="{{id}}" type="checkbox" {{checked value}} />
	{{/if}}
	{{#if (eq type "String")}}
		<input name="{{id}}" type="text" value="{{value}}" data-dtype="String" />
	{{/if}}
	{{#if (eq type "Textarea")}}
		<textarea name="{{id}}" cols="4" data-dtype="String">{{value}}</textarea>
	{{/if}}
	{{#if (eq type "Color")}}
		<color-picker name="{{id}}" value="{{value}}"></color-picker>
	{{/if}}
	{{#if (eq type "Select")}}
		<select name="{{id}}" class="form-fields">
			{{selectOptions select selected=value valueAttr="key" labelAttr="value"}}
		</select>
	{{/if}}
	{{#if (eq type "Range")}}
		<input
			name="{{id}}"
			type="range"
			max="{{range.max}}"
			min="{{range.min}}"
			step="{{range.step}}"
			value="{{value}}"
		/>
		<span class="range-value">{{value}}</span>
	{{/if}}
	<p class="notes">{{localize hint}}</p>
</div>